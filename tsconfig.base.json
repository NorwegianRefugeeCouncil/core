{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@nrcno/core-clients": ["libs/clients/src/index.ts"],
      "@nrcno/core-db": ["libs/db/src/index.ts"],
      "@nrcno/core-errors": ["libs/errors/src/index.ts"],
      "@nrcno/core-logger": ["libs/logger/src/index.ts"],
      "@nrcno/core-models": ["libs/models/src/index.ts"],
      "@nrcno/core-prm-components": ["libs/prm-components/src/index.ts"],
      "@nrcno/core-prm-engine": ["libs/prm-engine/src/index.ts"],
      "@nrcno/core-theme": ["libs/theme/src/index.ts"]
    },
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "exclude": ["node_modules", "tmp"]
}
